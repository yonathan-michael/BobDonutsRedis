<h1>Add Donut</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/donut/add">
  <div class="form-group">
    <label>ID</label>
    <input type="text" name="id" class="form-control" placeholder="Add Donut ID">
  </div>
  <div class="form-group">
    <label>Donut Name</label>
    <input type="text" name="name" class="form-control" placeholder="Add Donut Name">
  </div>
  <div class="form-group">
    <label>Price</label>
    <input type="text" name="price" class="form-control" placeholder="Price">
  </div>
  <input type="submit" class="btn btn-primary" value="Save">
</form>
